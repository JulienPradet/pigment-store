{
  "name": "pigment-store",
  "version": "1.0.0",
  "bin": {
    "pigment-store": "dist/cli/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build:js": "babel src -d dist",
    "build:html": "cp src/core/generator/html/index.html dist/core/generator/html/index.html",
    "build:css": "cd src && find . -name '*.css' | cpio -pdm ../dist",
    "build": "npm run build:js && npm run build:html",
    "prestart": "npm run build",
    "start": "node dist/cli/index.js",
    "build:watch:js": "babel -w src -d dist",
    "build:watch:html": "npm run build:html && nodemon --watch src/core/generator/html/index.html --delay 500ms --exec \"npm run build:html\"",
    "build:watch:css": "npm run build:css && nodemon -e css --exec \"npm run build:css\"",
    "build:watch": "npm run build:watch:js & build:watch:html & npm run build:watch:css",
    "serve:watch": "node dist/cli/index.js --dev",
    "dev": "npm run build:watch"
  },
  "author": "Julien Pradet <julien@pradet.me>",
  "license": "MIT",
  "dependencies": {
    "browserify-middleware": "^7.0.0",
    "chokidar": "^1.5.2",
    "css-modulesify": "^0.24.0",
    "data.task": "^3.1.0",
    "express": "^4.13.4",
    "mkdirp": "^0.5.1",
    "react": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-router": "^2.4.0",
    "recompose": "^0.19.0",
    "rx": "^4.1.0",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "nodemon": "^1.9.2",
    "parallelshell": "^2.0.0",
    "standard": "^7.1.2",
    "watchify": "^3.7.0"
  }
}
