{
  "name": "pigment-store",
  "version": "0.1.1",
  "bin": {
    "pigment-store": "cli/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && mkdir -p dist/core/generator/html",
    "build:js": "babel src -d dist",
    "build:html": "cp src/core/generator/html/*.html dist/core/generator/html/",
    "build:css": "cd src && find . -name '*.css' | cpio --quiet -updm ../dist",
    "build": "NODE_ENV=development npm run build:js && npm run build:html && npm run build:css",
    "prestart": "npm run build",
    "start": "node cli/index.js",
    "build:watch:js": "babel -w src -d dist",
    "build:watch:html": "npm run build:html && nodemon --watch src/core/generator/html/*.html --exec \"npm run build:html\"",
    "build:watch:css": "npm run build:css && nodemon --watch src -e css --exec \"npm run build:css\"",
    "build:watch": "NODE_ENV=development npm run build:watch:js & build:watch:html & npm run build:watch:css",
    "serve": "NODE_ENV=development node cli/index.js --bundler browserify -s test/react/visual/tests -o test/react/visual/styleguide",
    "serve:watch": "NODE_ENV=development node cli/index.js --dev --bundler browserify -s test/react/visual/tests -o test/react/visual/styleguide",
    "dev": "npm run build:watch",
    "test": "NODE_ENV=test babel-tape-runner test/**/*.test.js | faucet",
    "test:dev": "NODE_ENV=test babel-tape-runner test/**/*.test.js",
    "postinstall": "npm run clean && npm run build"
  },
  "author": "Julien Pradet <julien@pradet.me>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-detective": "^2.0.0",
    "babel-preset-react-app": "^2.0.1",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-middleware": "^7.0.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.2",
    "classnames": "^2.2.5",
    "css-loader": "^0.26.1",
    "css-modulesify": "^0.25.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.13.1",
    "markdown-it": "^8.2.1",
    "mkdirp": "^0.5.1",
    "postcss-loader": "^1.2.0",
    "prismjs": "^1.6.0",
    "rc-slider": "^5.4.0",
    "rc-switch": "^1.4.2",
    "react": "^15.4.1",
    "react-collapse": "^2.3.0",
    "react-dom": "^15.4.1",
    "react-height": "^2.1.0",
    "react-highlight-words": "^0.6.0",
    "react-modal": "^1.6.1",
    "react-motion": "^0.4.0",
    "react-router": "next",
    "recompose": "^0.20.0",
    "rx": "^4.1.0",
    "slug": "^0.9.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "watchify": "^3.7.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "nodemon": "^1.9.2",
    "parallelshell": "^2.0.0",
    "standard": "^8.6.0",
    "tape": "^4.5.1"
  }
}
