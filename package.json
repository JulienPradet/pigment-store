{
  "name": "pigment-store",
  "version": "0.1.1",
  "bin": {
    "pigment-store": "./cli/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "pigment-store",
    "serve": "npm run serve:webpack",
    "serve:watch": "npm run serve:webpack:watch",
    "serve:webpack": "NODE_ENV=production ./cli/index.js generate --bundler webpack -s src -t test/react/visual/tests -o test/react/visual/styleguide",
    "serve:webpack:watch": "NODE_ENV=development ./cli/index.js generate --dev --bundler webpack -s src -t test/react/visual/tests -o test/react/visual/styleguide",
    "serve:browserify": "NODE_ENV=production ./cli/index.js generate --bundler browserify -s src -t -s test/react/visual/tests -o test/react/visual/styleguide",
    "serve:browserify:watch": "NODE_ENV=development ./cli/index.js generate --dev --bundler browserify -s src -t test/react/visual/tests -o test/react/visual/styleguide",
    "test": "NODE_ENV=test babel-tape-runner test/**/*.test.js | faucet",
    "test:dev": "NODE_ENV=test babel-tape-runner test/**/*.test.js",
    "test:store": "NODE_ENV=test ./cli/index.js snapshot -s test/react/visual/tests",
    "test:store:watch": "NODE_ENV=test ./cli/index.js snapshot -s test/react/visual/tests -- --watch"
  },
  "author": "Julien Pradet <julien@pradet.me>",
  "license": "MIT",
  "dependencies": {
    "aliasify": "^2.1.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-detective": "^2.0.0",
    "babel-preset-react-app": "^2.0.1",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.2",
    "classnames": "^2.2.5",
    "css-loader": "^0.26.1",
    "css-modulesify": "^0.25.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "beta",
    "file-loader": "^0.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.0.0",
    "json-loader": "^0.5.4",
    "markdown-it": "^8.2.2",
    "mkdirp": "^0.5.1",
    "postcss-loader": "^1.2.0",
    "prismjs": "^1.6.0",
    "rc-slider": "^5.4.0",
    "rc-switch": "^1.4.2",
    "react": "^15.4.1",
    "react-collapse": "^2.3.0",
    "react-dom": "^15.4.1",
    "react-height": "^2.1.1",
    "react-highlight-words": "^0.6.0",
    "react-motion": "^0.4.7",
    "react-router": "next",
    "react-test-renderer": "^15.4.1",
    "recompose": "^0.21.0",
    "rx": "^4.1.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "watchify": "^3.8.0",
    "webpack": "2.1.0-beta.28",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "standard": "^8.6.0",
    "tape": "^4.5.1"
  },
  "babel": {
    "presets": ["react-app"]
  }
}
