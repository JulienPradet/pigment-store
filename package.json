{
  "name": "pigment-store",
  "version": "1.0.0",
  "bin": {
    "pigment-store": "dist/cli/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build:js": "babel src -d dist",
    "build:html": "cp src/core/generator/html/index.html dist/core/generator/html/index.html",
    "build:css": "cd src && find . -name '*.css' | cpio --quiet -updm ../dist",
    "build": "npm run build:js && npm run build:html",
    "prestart": "npm run build",
    "start": "node dist/cli/index.js",
    "build:watch:js": "babel -w src -d dist",
    "build:watch:html": "npm run build:html && nodemon --watch src/core/generator/html/index.html --delay 500ms --exec \"npm run build:html\"",
    "build:watch:css": "npm run build:css && nodemon --watch src -e css --exec \"npm run build:css\"",
    "build:watch": "npm run build:watch:js & build:watch:html & npm run build:watch:css",
    "serve:watch": "node dist/cli/index.js --dev",
    "dev": "npm run build:watch",
    "test:babel": "babel-tape-runner test/core/babel-meta-plugin/**/*.test.js",
    "test:dev:babel": "nodemon --watch test/core/babel-meta-plugin --watch src/core/babel-meta-plugin --exec \"npm run test:babel\""
  },
  "author": "Julien Pradet <julien@pradet.me>",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-detective": "^1.0.2",
    "browserify-middleware": "^7.0.0",
    "chokidar": "^1.5.2",
    "classnames": "^2.2.5",
    "css-modulesify": "^0.24.0",
    "express": "^4.13.4",
    "markdown-it": "^7.0.0",
    "mkdirp": "^0.5.1",
    "prismjs": "^1.5.1",
    "rc-slider": "^3.7.3",
    "rc-switch": "^1.4.2",
    "react": "^0.14.8",
    "react-collapse": "^2.3.0",
    "react-dom": "^0.14.8",
    "react-height": "^2.1.0",
    "react-highlight-words": "^0.1.7",
    "react-modal": "^1.3.0",
    "react-router": "^2.4.0",
    "recompose": "^0.20.0",
    "rx": "^4.1.0",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "faucet": "0.0.1",
    "nodemon": "^1.9.2",
    "parallelshell": "^2.0.0",
    "standard": "^7.1.2",
    "tape": "^4.5.1",
    "watchify": "^3.7.0"
  }
}
